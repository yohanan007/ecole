{% extends 'base.html.twig' %}


{% block title %}Agenda{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .ck-editor {
        color: var(--color);
    }
</style>

<div class="container">
    <h1>Hello {{ controller_name }}! âœ…</h1>
    <div class ="card">
        <div class="card-header">
            <p>Agenda</p>
        </div>
        <div class="card-body">
            <div id="agenda_corps">
                
            </div>
        </div>
    </div>
</div>

<input id="day" type="hidden" value="{{ day }}">
<input id="month" type="hidden" value="{{ month }}">
<input id="year" type="hidden" value="{{ year }}">
<input id="action" type="hidden" value="agenda_corps">
<input id="format" type="hidden" value="{{ format }}">
<input id="agenda-data" type="hidden" value="{{ agenda }}">
<input type="hidden" name="token" id="token" value="{{ csrf_token('create-time') }}">




{% endblock %}

{% block extraJs %}
    {{ encore_entry_script_tags('utilitaire') }}
    {{ encore_entry_script_tags('agenda') }}
    {{ encore_entry_script_tags('agenda_action') }}    

{% endblock %}